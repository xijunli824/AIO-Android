<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_down"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_bg" >

                <TextView
                    style="@style/gd_netset_text_title"
                    android:layout_width="@dimen/gd_netset_text_w"
                    android:layout_height="@dimen/gd_netset_text_h"
                    android:layout_centerInParent="true"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/setting" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_help"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_chlid_press_sel"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/gd_netset_netchoice_h"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/gd_netset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/help" />

                        <ImageView
                            android:layout_width="@dimen/gd_image_jiantou_wh"
                            android:layout_height="@dimen/gd_image_jiantou_wh"
                            android:src="@drawable/settings_icon_help" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>

                <!-- add begin lhy -->

                <LinearLayout
                    android:id="@+id/layout_check_app_ver"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_chlid_press_sel"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/gd_netset_netchoice_h"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/gd_netset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/check_app_ver" />

                        <ImageView
                            android:layout_width="@dimen/gd_image_jiantou_wh"
                            android:layout_height="@dimen/gd_image_jiantou_wh"
                            android:src="@drawable/settings_icon_about" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>

                <!-- add end -->

                <LinearLayout
                    android:id="@+id/layout_send"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_chlid_press_sel"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/gd_netset_netchoice_h"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/gd_netset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/send" />

                        <ImageView
                            android:layout_width="@dimen/gd_image_jiantou_wh"
                            android:layout_height="@dimen/gd_image_jiantou_wh"
                            android:src="@drawable/settings_icon_news" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_clear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_chlid_press_sel"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/gd_netset_netchoice_h"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/gd_netset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/clear" />

                        <ImageView
                            android:layout_width="@dimen/gd_image_jiantou_wh"
                            android:layout_height="@dimen/gd_image_jiantou_wh"
                            android:src="@drawable/settings_icon_remove" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_full_screen_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_chlid_press_sel"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/gd_netset_netchoice_h"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/gd_netset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/full_screen" />

                        <ImageView
                            android:layout_width="@dimen/gd_image_jiantou_wh"
                            android:layout_height="@dimen/gd_image_jiantou_wh"
                            android:src="@drawable/settings_icon_fullscreen" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_modify"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_chlid_press_sel"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/gd_netset_netchoice_h"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/gd_netset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/modify_setting" />

                        <ImageView
                            android:layout_width="@dimen/gd_image_jiantou_wh"
                            android:layout_height="@dimen/gd_image_jiantou_wh"
                            android:src="@drawable/settings_icon_password" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_userinfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_chlid_press_sel"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/gd_netset_netchoice_h"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/gd_netset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/user_setting" />

                        <ImageView
                            android:layout_width="@dimen/gd_image_jiantou_wh"
                            android:layout_height="@dimen/gd_image_jiantou_wh"
                            android:src="@drawable/personinfo_setting" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_exit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_chlid_press_sel"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/gd_netset_netchoice_h"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/gd_netset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/exit" />

                        <ImageView
                            android:layout_width="@dimen/gd_image_jiantou_wh"
                            android:layout_height="@dimen/gd_image_jiantou_wh"
                            android:src="@drawable/settings_icon_quit" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:layout_width="match_parent"
        android:layout_height="60dp"
        layout="@layout/tabbar" />

</LinearLayout>