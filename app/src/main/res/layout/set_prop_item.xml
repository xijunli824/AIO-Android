<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_help"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_chlid_press_sel"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/gd_netset_netchoice_h"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="20dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <org.cmaaio.common.RemoteImageView
            android:id="@+id/prop_appIcon"
            android:layout_width="@dimen/gd_playset_play_auto_h"
            android:layout_height="@dimen/gd_playset_play_auto_h"
            android:src="@drawable/icon_task" />

        <TextView
            android:id="@+id/prop_appName"
            style="@style/gd_netset_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1.0" 
            android:textSize="14dp"/>

        <Button
            android:id="@+id/all_read"
            android:layout_width="78dip"
            android:layout_height="40dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/btn_all_read_push" 
            android:text="@string/btn_all_read" />

        
        <org.cmaaio.ui.SlipButton
            android:id="@+id/btn_is_read"
            android:layout_width="@dimen/gd_slip_bottom_w"
            android:layout_height="@dimen/gd_slip_bottom_h"
            android:gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>